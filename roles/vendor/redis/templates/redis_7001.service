[Unit]
Description=Redis key-value database on 7001
After=network.target
[Service]
ExecStart=/usr/local/bin/redis-server redis_7001.conf --supervised systemd
ExecStop=/usr/local/bin/redis-cli -h 127.0.0.1 -p 7001 shutdown
Type=notify
User=redis
Group=redis
WorkingDirectory=/etc/redis_cluster/redis_7001
LimitNOFILE=65535
[Install]
WantedBy=multi-user.target
